<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="#FFE8F7"
    tools:context="com.example.princess.EscopoPerguntas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        >

        <TextView
            android:id="@+id/pergunta1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:fontFamily="@font/cherry_swash"
            android:gravity="center"
            android:text="Teste de vizualização do texto!"
            android:textColor="@color/colorAccent"
            android:textSize="26dp"
            android:textStyle="normal">
        </TextView>

        <ImageView
            android:id="@+id/imagCinderela"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/sapatinho">
        </ImageView>

        <LinearLayout
            android:id="@+id/tv_barraProgresso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ProgressBar
                android:id="@+id/barraProgresso"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:minHeight="40dp"
                android:progress="0"
                android:indeterminate="false">
            </ProgressBar>

            <TextView
                android:id="@+id/contagemProgresso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textColorHint="#7A8089"
                android:textSize="17sp"
                tools:text="0/10">
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/resp1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/borda_aparencia_botao"
            android:fontFamily="@font/cherry_swash"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="18sp"
            tools:text="Opção1">
        </TextView>

        <TextView
            android:id="@+id/resp2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/borda_aparencia_botao"
            android:fontFamily="@font/cherry_swash"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="18sp"
            tools:text="Opção2">
        </TextView>

        <TextView
            android:id="@+id/resp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/borda_aparencia_botao"
            android:fontFamily="@font/cherry_swash"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="18sp"
            tools:text="Opção3">
        </TextView>

        <TextView
            android:id="@+id/resp4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/borda_aparencia_botao"
            android:fontFamily="@font/cherry_swash"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="18sp"
            tools:text="Opção4">
        </TextView>

        <Button
            android:id="@+id/btn_conferir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/alata"
            android:text="Conferir"
            android:textColor="#FFE8F7"
            android:textSize="19sp"
            android:textStyle="bold"
            app:cornerRadius="4dp">
        </Button>

    </LinearLayout>
</ScrollView>